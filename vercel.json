{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "build": {
    "env": {
      "HUSKY": "0",
      "CYPRESS_INSTALL_BINARY": "0",
      "CI": "1"
    }
  },
  "rewrites": [
    { "source": "/admin", "destination": "/app/admin" },
    { "source": "/patient-dashboard", "destination": "/app/paciente" },
    { "source": "/patient", "destination": "/app/paciente" },
    { "source": "/app", "destination": "/index.html" },
    { "source": "/app/(.*)", "destination": "/index.html" },
    { "source": "/(login|register|landing)", "destination": "/index.html" }
  ]
}
