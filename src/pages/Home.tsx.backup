                <i className="fas fa-microphone text-sm lg:text-lg"></i>
              </div>
            )}
          </div>

          {/* Pensamentos Flutuantes */}
          <AnimatePresence>
            {thoughts.map((thought, index) => (
              <ThoughtBubble
                key={thought.id}
                thought={thought}
                index={index}
                onClick={() => handleThoughtClick(thought)}
                onClose={() => handleThoughtClose(thought.id)}
              />
            ))}
          </AnimatePresence>
        </div>
      </div>
    </div>
  )
}

export default Home