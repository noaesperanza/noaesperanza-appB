      setIsVoiceListening(false)
      return
    }

    const SpeechRecognition = (window as any).SpeechRecognition || (window as any).webkitSpeechRecognition
    const recognition = new SpeechRecognition()

    recognition.continuous = false // Para ap√≥s capturar uma frase (evita eco)
    recognition.interimResults = false // N√£o mostra texto intermedi√°rio (evita eco)
    recognition.lang = 'pt-BR'
    recognition.maxAlternatives = 1 // Melhor precis√£o
    
    // Reconhecimento single-shot para evitar eco

    recognition.onstart = () => {
      console.log('üé§ Reconhecimento de voz iniciado (modo single-shot)')
      // Removido: addNotification('üé§ Microfone ativo! Fale uma frase!', 'success')
    }

    recognition.onresult = (event: any) => {
      // Para o reconhecimento imediatamente para evitar eco
      recognition.stop()
      
      let finalTranscript = ''
      
      // Processa apenas resultados finais
      for (let i = event.resultIndex; i < event.results.length; i++) {
        if (event.results[i].isFinal) {
          finalTranscript += event.results[i][0].transcript
        }
      }

      // S√≥ processa se n√£o estiver tocando √°udio da NOA (evita eco)
      if (finalTranscript && !audioPlaying) {
        console.log('üé§ Texto reconhecido:', finalTranscript)
        
